    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Steam",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/steam-games.js",
            "env": {
                "STEAM_JSON": "1",
                "STEAM_GAMERPOWER": "1"
            }
        }
    ]
}
